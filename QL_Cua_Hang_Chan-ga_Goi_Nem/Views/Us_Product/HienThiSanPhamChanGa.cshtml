@model IEnumerable<QL_Cua_Hang_Chan_ga_Goi_Nem.Models.User_Md.SanPham>
@{
    ViewBag.Title = "HienThiSanPhamChanGa";
    Layout = "~/Views/Shared/User_Layout.cshtml";
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
}

<div class="container mt-1">
    <div class="img-top mb-4 rounded-4 overflow-hidden">
        <img src="/Content/Hinh_Anh/poster/poster chăn ga.png" alt="" />
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="sticky-top">
                <form method="get" action="@Url.Action("HienThiSanPhamChanGa", "Us_Product")">
                    <section class="sticky-top p-3 rounded-4 shadow-sm bg-white">
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <i class='bx bx-filter-alt fs-4 text-primary'></i>
                            <span class="fw-bold text-primary" style="font-size:18px">Bộ lọc</span>
                        </div>
                        <!-- Accordion Filter  -->
                        <div class="accordion filter-accordion" id="filterAccordion">
                            <!-- Filter 1: Product Type -->
                            <div class="accordion-item mb-2 rounded-3 border-0">
                                <h2 class="accordion-header" id="headingLoai">
                                    <button class="accordion-button fw-semibold text-primary bg-light-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseLoai" aria-expanded="true" aria-controls="collapseLoai">
                                        Loại sản phẩm
                                    </button>
                                </h2>
                                <div id="collapseLoai" class="accordion-collapse collapse show" aria-labelledby="headingLoai" data-bs-parent="#filterAccordion">
                                    <div class="accordion-body p-2">
                                        <div class="row ps-2">
                                            @foreach (var loai in ViewBag.DanhSachLoaiSanPham as List<string>)
                                            {
                                                if (loai.ToLower().Contains("chăn") || loai.ToLower().Contains("ga"))
                                                {
                                                    <div class="form-check col-12 mb-2">
                                                        <input class="form-check-input" type="checkbox" name="LoaiSanPham" value="@loai" id="loai_@loai">
                                                        <label class="form-check-label ms-2" for="loai_@loai">@loai</label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Filter 2: Size -->
                            <div class="accordion-item mb-2 rounded-3 border-0">
                                <h2 class="accordion-header" id="headingKichThuoc">
                                    <button class="accordion-button fw-semibold text-primary bg-light-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseKichThuoc" aria-expanded="true" aria-controls="collapseKichThuoc">
                                        Kích thước
                                    </button>
                                </h2>
                                <div id="collapseKichThuoc" class="accordion-collapse collapse show" aria-labelledby="headingKichThuoc" data-bs-parent="#filterAccordion">
                                    <div class="accordion-body p-2">
                                        <div class="row ps-2">
                                            @foreach (var kichThuoc in ViewBag.DanhSachKichThuoc as List<string>)
                                            {
                                                <div class="form-check col-12 mb-2">
                                                    <input class="form-check-input" type="checkbox" name="KichThuoc" value="@kichThuoc" id="kichThuoc_@kichThuoc">
                                                    <label class="form-check-label ms-2" for="kichThuoc_@kichThuoc">@kichThuoc</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Filter 3: Price Range -->
                            <div class="accordion-item mb-2 rounded-3 border-0">
                                <h2 class="accordion-header" id="headingGia">
                                    <button class="accordion-button fw-semibold text-primary bg-light-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGia" aria-expanded="true" aria-controls="collapseGia">
                                        Khoảng giá
                                    </button>
                                </h2>
                                <div id="collapseGia" class="accordion-collapse collapse show" aria-labelledby="headingGia" data-bs-parent="#filterAccordion">
                                    <div class="accordion-body p-2">
                                        <div class="row ps-2">
                                            <div class="form-check col-12 mb-2">
                                                <input class="form-check-input" type="checkbox" name="KhoangGia" value="1" id="gia_1">
                                                <label class="form-check-label ms-2" for="gia_1">Dưới 1 triệu</label>
                                            </div>
                                            <div class="form-check col-12 mb-2">
                                                <input class="form-check-input" type="checkbox" name="KhoangGia" value="2" id="gia_2">
                                                <label class="form-check-label ms-2" for="gia_2">1 - 3 triệu</label>
                                            </div>
                                            <div class="form-check col-12 mb-2">
                                                <input class="form-check-input" type="checkbox" name="KhoangGia" value="3" id="gia_3">
                                                <label class="form-check-label ms-2" for="gia_3">3 - 5 triệu</label>
                                            </div>
                                            <div class="form-check col-12 mb-2">
                                                <input class="form-check-input" type="checkbox" name="KhoangGia" value="4" id="gia_4">
                                                <label class="form-check-label ms-2" for="gia_4">5 - 10 triệu</label>
                                            </div>
                                            <div class="form-check col-12 mb-2">
                                                <input class="form-check-input" type="checkbox" name="KhoangGia" value="5" id="gia_5">
                                                <label class="form-check-label ms-2" for="gia_5">Trên 10 triệu</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Filter 4: Color -->
                            <div class="accordion-item mb-2 rounded-3 border-0">
                                <h2 class="accordion-header" id="headingColor">
                                    <button class="accordion-button fw-semibold text-primary bg-light-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#collapseColor" aria-expanded="true" aria-controls="collapseColor">
                                        Màu Sắc
                                    </button>
                                </h2>
                                <div id="collapseColor" class="accordion-collapse collapse show" aria-labelledby="headingColor" data-bs-parent="#filterAccordion">
                                    <div class="accordion-body p-2">
                                        <div class="row ps-2">
                                            @foreach (var mausac in ViewBag.DanhSachMauSac as List<string>)
                                            {
                                                <div class="form-check col-12 mb-2">
                                                    <input class="form-check-input" type="checkbox" name="MauSac" value="@mausac" id="MauSac_@mausac">
                                                    <label class="form-check-label ms-2" for="MauSac_@mausac">@mausac</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary border-0 w-100 rounded-pill py-2 fw-bold shadow-sm mt-3">Áp dụng bộ lọc</button>
                    </section>
                </form>
            </div>
        </div>
        <!-- Product Section -->
        <div class="col-md-9">
            <h4 class="mb-3 fw-bold text-primary">Chăn Ga</h4>
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <a class="col-12 col-sm-6 col-lg-4 text-decoration-none" href="@Url.Action("ChiTietSanPham", new { id = product.SanPhamId})">
                        <div class="product-card position-relative border-0 shadow-sm">
                            @if (product.GiamGia != null && product.GiamGia != 0)
                            {
                                <div class="discount-label">-@product.GiamGia.ToString("N0")%</div>
                            }
                            <div class="product-img mb-2 d-flex align-items-center justify-content-center bg-light rounded-4 overflow-hidden" style="height: 200px;">
                                <img style="max-width: 90%; max-height: 90%; object-fit: contain; border-radius: 12px;" src="~/Content/Hinh_Anh/@product.HinhAnh" alt="@product.HinhAnh">
                            </div>
                            <div class="p-3 card-content flex-grow-1 d-flex flex-column justify-content-between">
                                <div class="d-flex align-items-center mb-1">
                                    <span class="fw-semibold">@product.DanhGiaTrungBinh/5</span>
                                    <i class='bx bxs-star text-warning ms-1'></i>
                                    <span class="text-muted ms-1">(@product.SoLuongDanhGia)</span>
                                </div>
                                <p class="fw-bold mt-2 name-product">@product.TenSanPham</p>
                                <span class="text-danger fw-bold fs-5">
                                    @if (product.GiaKhuyenMai == product.Gia)
                                    {
                                        @product.GiaKhuyenMai.ToString("N0")
                                    }
                                    else
                                    {
                                        @product.GiaKhuyenMai.ToString("N0")
                                        <span class="text-muted text-decoration-line-through small ms-2">
                                            @product.Gia.ToString("N0")
                                        </span>
                                    }
                                </span>
                                <p class="mt-1 mb-0 text-secondary small"><i class='bx bx-expand'></i> @product.SoLuongKichThuoc Kích Thước</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .filter-accordion .accordion-item {
        background: transparent;
        border: none;
        box-shadow: none;
    }
    .filter-accordion .accordion-button {
        border-radius: 12px !important;
        background: #f8fafc !important;
        color: #2d2e7f !important;
        font-size: 1.08rem;
        font-weight: 600;
        box-shadow: none;
        padding: 10px 16px;
        margin-bottom: 2px;
    }
    .filter-accordion .accordion-button:not(.collapsed) {
        color: #f6a733 !important;
        background: #f3f3ff !important;
    }
    .filter-accordion .accordion-body {
        padding: 8px 0 0 0;
    }
    .form-check-input:checked {
        background-color: #2d2e7f;
        border-color: #2d2e7f;
    }
    .form-check-label {
        font-size: 1rem;
        color: #444;
        cursor: pointer;
        transition: color 0.2s;
    }
    .form-check-label:hover {
        color: #2d2e7f;
    }
    .btn-primary {
        background-color: #2d2e7f;
        border-color: #2d2e7f;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 20px;
        transition: background 0.3s, transform 0.2s;
    }
    .btn-primary:hover {
        background: #f6a733;
        color: #fff;
    }
    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border: none;
        border-radius: 8px;
        background: #fff;
        box-shadow: 0 2px 12px rgba(44, 46, 127, 0.10);
        overflow: hidden;
        cursor: pointer;
        min-height: 420px;
        display: flex;
        flex-direction: column;
    }
    .product-card:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 8px 24px rgba(44, 46, 127, 0.18);
    }
    .product-img {
        width: 100%;
        height: 200px;
        background: #f3f3ff;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .product-img img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 8px 8px 0 0;
    }
    .card-content {
        padding: 12px 8px 8px 8px;
    }
    .name-product {
        font-size: 1.08rem;
        font-weight: 600;
        color: #2d2e7f;
        margin-bottom: 4px;
        min-height: 44px;
    }
    .card-content .text-danger {
        font-size: 1.15rem;
        font-weight: bold;
        color: #e53935 !important;
    }
    .card-content .text-muted {
        font-size: 0.95rem;
        margin-left: 8px;
    }
    .discount-label {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #f6a733;
        color: #fff;
        font-size: 0.9rem;
        font-weight: bold;
        padding: 7px 13px;
        border-radius: 50px;
        box-shadow: 0 2px 6px rgba(44, 46, 127, 0.10);
        z-index: 2;
    }
    @@media (max-width: 991px) {
        .img-top img {
            min-height: 120px;
            height: 120px;
            border-radius: 20px;
        }
        .product-img {
            height: 120px;
        }
        .product-card {
            min-height: 260px;
        }
    }
</style>
