@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<div class="login-container d-flex align-items-center justify-content-center">
    <div class="login-card p-4 p-md-4 rounded-4 shadow-lg bg-white w-100" style="max-width: 420px; box-shadow: 0 8px 32px rgba(44,46,127,0.18)!important;">
        <div class="text-center mb-4">
            <i class='bx bx-user-circle' style="font-size:3rem;color:#2d2e7f;"></i>
            <h2 class="fw-bold mb-2 text-primary">Đăng Nhập</h2>
        </div>
        @using (Html.BeginForm("DangNhap", "DangNhap", FormMethod.Post, new { @class = "login-form" }))
        {
            <div class="mb-3">
                <label class="form-label fw-semibold text-secondary">Tên đăng nhập</label>
                @Html.TextBox("tenDangNhap", null, new { @class = "form-control login-input", placeholder = "Nhập tên đăng nhập" })
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold text-secondary">Mật khẩu</label>
                @Html.Password("matKhau", null, new { @class = "form-control login-input", placeholder = "Nhập mật khẩu" })
            </div>
            if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger py-2 text-center mb-3" style="font-size: 0.98rem;">@ViewBag.ErrorMessage</div>
            }
            <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill fw-bold shadow-sm mb-2" style="font-size:1.1rem;">
                <i class='bx bx-log-in'></i> Đăng Nhập
            </button>
            <div class="text-center mt-2">
                Chưa có tài khoản? <a href=""></a><a href="@Url.Action("DangKy", "DangNhap")" class="text-decoration-none text-primary fw-semibold login-link">Đăng ký</a>
            </div>
        }
    </div>
</div>
<style>
    .login-container {
        min-height: 60vh;
    }
    .login-card {
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(44,46,127,0.18)!important;
        background: #fff;
        padding: 1.5rem 1.2rem;
    }
    .login-input {
        border-radius: 12px;
        border: 1.5px solid #e0e0e0;
        font-size: 1.08rem;
        padding: 10px 14px;
        background: #f8fafc;
        transition: border-color 0.2s;
    }
    .login-input:focus {
        border-color: #2d2e7f;
        box-shadow: 0 0 0 2px #f6a73333;
        background: #fff;
    }
    .btn-primary, .btn-primary:focus {
        background-color: #2d2e7f;
        border-color: #2d2e7f;
        color: #fff;
        font-weight: 600;
        transition: background 0.3s, transform 0.2s;
    }
    .btn-primary:hover {
        background: #f6a733;
        border-color: #f6a733;
        color: #fff;
    }
    .login-link {
        color: #2d2e7f;
        transition: color 0.2s;
    }
    .login-link:hover {
        color: #f6a733;
        text-decoration: underline;
    }
    @@media (max-width: 600px) {
        .login-card {
            padding: 1rem !important;
        }
    }
</style>