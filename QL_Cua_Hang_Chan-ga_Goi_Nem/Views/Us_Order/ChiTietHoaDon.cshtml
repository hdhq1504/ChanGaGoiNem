@@media (max-width: 480px) {
    .invoice-title {
        font-size: 1.75rem;
    }
    
    .card-value {
        font-size: 1.125rem;
    }
    
    .total-amount {
        font-size: 1.25rem;
    }
    
    .products-section {
        padding: 1rem;
    }
    
    .product-card {
        padding: 1rem;
    }
}
