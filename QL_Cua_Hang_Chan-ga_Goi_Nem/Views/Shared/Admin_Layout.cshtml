<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body class="overflow-x: auto;">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <div class="row w-100">
                <div class="col">
                    <a class="navbar-brand d-flex" href="~/Us_Product/HienThiSanPhamNem">
                        <img src="~/Content/Hinh_Anh/Logo/Logo-removebg.png" alt="Logo" width="230" height="50" class="d-inline-block align-text-top">
                    </a>
                </div>
                <div class="col text-center">

                </div>
                <div class="col">
                    
                </div>
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-2">
            <div class="sticky-top">
                <div class="sidebar">
                    <a href="~/Ad_Product/HienThiSP"><i class='bx bx-duplicate'></i> Sản Phẩm</a>
                    <a href="~/Ad_Order/DonHang"><i class='bx bx-food-menu'></i> Đơn Hàng</a>
                    <a href="~/Ad_Services/KhuyenMaiSP"><i class='bx bx-purchase-tag-alt'></i> Khuyến Mãi</a>
                    <a href="~/Ad_User/HienThiNguoiDung"><i class='bx bx-user'></i> Người Dùng</a>
                    <a href="~/Ad_Revenue/Index"><i class='bx bx-bar-chart-square'></i> Doanh Thu</a>
                </div>
            </div>
        </div>
        <div class="col-10">
            <section style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; border-radius: 16px; padding: 10px; margin: 5px; min-height:85vh; width: 100%; overflow-x: auto;">
                @RenderBody()
            </section>
        </div>
    </div>





    <style>
        .sidebar {
            border-radius: 16px;
            height: 100vh;
            left: 0;
            background-color: #2D2E7F;
            color: white;
            padding-top: 20px;
        }

            .sidebar a {
                border-radius: 0 40px 40px 0px;
                color: white;
                padding: 15px;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: white;
                    color: #2D2E7F;
                }
    </style>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>


</html>