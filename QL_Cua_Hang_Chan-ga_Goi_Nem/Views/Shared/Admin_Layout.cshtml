<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>

<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm sticky-top">
        <div class="container-fluid px-5">
            <a class="navbar-brand d-flex align-items-center" href="~/Us_Product/HienThiSanPhamNem">
                <img src="~/Content/Hinh_Anh/Logo/logo.png" alt="Logo" width="160" class="d-inline-block">
            </a>
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="d-flex align-items-center">
                    <i class='bx bx-user-circle fs-4 me-2'></i>
                    <span class="fw-medium">Admin</span>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-auto px-0">
                <div class="sidebar shadow-sm d-flex flex-column">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Ad_Product/HienThiSP">
                                <i class='bx bx-package'></i>
                                <span>Sản Phẩm</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Ad_Order/DonHang">
                                <i class='bx bx-receipt'></i>
                                <span>Đơn Hàng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Ad_Services/KhuyenMaiSP">
                                <i class='bx bx-gift'></i>
                                <span>Khuyến Mãi</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Ad_User/HienThiNguoiDung">
                                <i class='bx bx-group'></i>
                                <span>Người Dùng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Ad_Revenue/Index">
                                <i class='bx bx-line-chart'></i>
                                <span>Doanh Thu</span>
                            </a>
                        </li>
                    </ul>
                    <div class="mt-auto px-3 pb-4">
                        <a class="btn btn-danger w-100 d-flex align-items-center justify-content-center gap-2" href="~/DangNhap/DangNhap">
                            <i class='bx bx-log-out'></i>
                            <span>Đăng xuất</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="content-wrapper">
                    <div class="content-body rounded-3 bg-white shadow-sm p-4 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --primary-color: #2D2E7F;
            --primary-light: #3e3fa8;
            --text-color: #333;
            --sidebar-width: 250px;
        }

        body {
            color: var(--text-color);
        }
        
        .sidebar {
            width: var(--sidebar-width);
            background: var(--primary-color);
            transition: all 0.3s ease;
            height: calc(100% - 28px);
        }

        .sidebar .nav-link {
            display: flex;
            align-items: center;
            padding: 18px 20px;
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
        }

        .sidebar .nav-link:hover {
            color: #fff;
            background: var(--primary-light);
            padding-left: 25px;
        }

        .sidebar .nav-link i {
            font-size: 1.4rem;
            margin-right: 10px;
        }

        .content-wrapper {
            margin-left: 15px;
        }

        .content-body {
            min-height: calc(100vh - 100px);
        }

        .navbar {
            height: 80px;
            border-bottom: 1px solid #eee;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>