<body>
    <header>
        <!-- Top Navigation Bar -->
        <div class="fixed-top nav-top px-3 py-2" style="z-index:1050;">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between w-100" style="min-height:70px;">
                    <!-- Menu trái -->
                    <div class="nav-header-left d-flex align-items-center gap-3 flex-shrink-0" style="min-width:180px;">
                        <a href="~/Us_Order/Index" class="nav-link-top d-flex align-items-center gap-2">
                            <div class="icon-wrapper">
                                <i class='bx bx-bookmarks'></i>
                            </div>
                            <span class="nav-text">Đơn hàng</span>
                        </a>
                    </div>
                    <!-- Logo giữa -->
                    <div class="nav-header-center">
                        <a href="~/Us_Product/HienThiSanPhamNem" class="logo-link">
                            <img src="~/Content/Hinh_Anh/Logo/Logo-bg.png" alt="Logo" class="logo-img" />
                        </a>
                    </div>
                    <!-- Menu phải -->
                    <div class="nav-header-right d-flex align-items-center gap-3 flex-shrink-0 justify-content-end">
                        <a href="~/Us_Product/GioHang" class="nav-link-top d-flex align-items-center gap-2 position-relative">
                            <div class="icon-wrapper">
                                <i class='bx bx-cart'></i>
                                <span class="cart-badge">3</span>
                            </div>
                            <span class="nav-text">Giỏ hàng</span>
                        </a>
                        <div class="dropdown">
                            <button class="nav-link-top dropdown-toggle d-flex align-items-center gap-2 user-dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration:none; background: none; border: none;">
                                <div class="icon-wrapper user-icon">
                                    <i class='bx bx-user'></i>
                                </div>
                                @if (Session["UserName"] != null)
                                {
                                    <span class="nav-text">@Session["UserName"]</span>
                                }
                                else
                                {
                                    <span class="nav-text">Tài Khoản</span>
                                }
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                @if (Session["UserName"] != null)
                                {
                                    <li><a class="dropdown-item d-flex align-items-center gap-2" href="~/DangNhap/ThongTinTaiKhoan"><i class='bx bx-user-circle'></i><span>Thông tin tài khoản</span></a></li>
                                    <li><a class="dropdown-item d-flex align-items-center gap-2" href="~/Us_Order/Index"><i class='bx bx-receipt'></i><span>Đơn hàng của tôi</span></a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item d-flex align-items-center gap-2 text-danger" href="~/DangNhap/DangXuat"><i class='bx bx-log-out'></i><span>Đăng xuất</span></a></li>
                                    if (Session["VaiTro"] != null && Session["VaiTro"].ToString() == "admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item d-flex align-items-center gap-2 text-primary" href="~/Ad_Product/HienThiSP"><i class='bx bx-cog'></i><span>Quản trị</span></a></li>
